<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheet/view-jobs.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    
    <!-- navbar search menu -->
     <nav class="p-1 d-flex flex-row justify-content-center align-items-center">
        <div class="search-wrapper w-100 w-xs-50">
            <div class="search-box">
                <i class="fas fa-search search-icon"></i>
                <form action="/workconnect/view-jobs" method="get">
                <button class="btn btn-primary search-button">Search</button>
                <input type="text" class="form-control search-input" placeholder="Enter your job..." name="search">
                </form>
            </div>
        </div>
     </nav>

    <!-- main section -->
    <section class="container" id="main_sec">
      <div class="d-flex justify-content-evenly row">
      <%if(jobs.length==0){%>
          <h1>No Jobs Found</h1>
      <%} else {%>
        <h1>Jobs,</h1>
      <% let count = 0; %>
      <% jobs.forEach (function (val){ %>
      <% val.Data.forEach( function (val1){%>
      <%if(val1.profession==profession || profession==''){%>
      <div class="card-container col-lg-3 mb-5">
          <div class="card rounded-5" id="card<%=count%>">
              <div class="card-side card-front rounded-5">
                  <div class="job-provider d-flex flex-row">
                      <p class="m-1 mt-2"><%=val.firstname%> <%=val.lastname%></p>
                  </div>
                  <div class="job-details">
                      <h3 class="text-center"><%=val1.profession%></h3>
                      <p class="mb-0" id="job-timeline">Workday:<%=val1.work_day%></p>
                      <p class="mb-3" id="job-pay-method">Payment:<%=val1.payment%></p>
                      <button onclick="flipCard('<%=count%>')" class=" button rounded-pill position-absolute" style="bottom: 15px; right: 15px;">Details</button>
                  </div>
              </div>
              <div class="card-side card-back rounded-5">
                  <p>Posted on:<%=val1.createdAt%></p>
                  <p>Wages: <%=val1.salary%>₹</p>
                  <p>Location: <%=val.state%>, <%=val.district%></p>
                  <p>Address: <%=val.Address%></p>
                  <p>Contact_no. : <%=val.mobile%></p>
                  <button onclick="flipCard('<%=count%>')" class=" button rounded-pill position-absolute" style="bottom: 15px; right: 15px;" >Back</button>
              </div>
          </div>
      </div>
      <% count++; %>
      <%};%>
      <%});%>
      <%});%>
      <%}%>
      </div>
  </section>
    <footer class="text-center text-white" style="background-color: #546A7B">
        <!-- Grid container -->
